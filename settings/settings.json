{
  // ==========================================
  // CORE EDITOR SETTINGS
  // ==========================================

  // Font Configuration
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 16,
  "editor.fontWeight": "300",
  "editor.lineHeight": 1.6,
  "editor.fontLigatures": true,
  "editor.fontVariations": false,
  "editor.codeLensFontFamily": "JetBrains Mono",

  // Editor Behavior
  "editor.tabSize": 4,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,

  // Visual Settings
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // ==========================================
  // WORKBENCH & UI SETTINGS
  // ==========================================

  // Theme & Appearance
  "workbench.colorTheme": "Catppuccin Latte",
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.iconTheme": "material-icon-theme",

  // Layout & Navigation
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.indent": 20,
  "workbench.editor.enablePreview": true,

  // Window Settings
  "window.titleBarStyle": "custom",

  // ==========================================
  // FILE MANAGEMENT
  // ==========================================

  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDragAndDrop": false,

  // ==========================================
  // TERMINAL CONFIGURATION
  // ==========================================

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "475",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // ==========================================
  // GIT INTEGRATION
  // ==========================================

  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // ==========================================
  // GITHUB COPILOT SETTINGS
  // ==========================================

  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.fixes": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },

  // ==========================================
  // CHAT & AI SETTINGS
  // ==========================================

  "chat.agent.enabled": true,
  "chat.editor.fontFamily": "JetBrains Mono",
  "chat.mcp.discovery.enabled": true,
  "chat.tools.autoApprove": true,
  "inlineChat.enableV2": true,
  "accessibility.voice.speechTimeout": 0,

  // ==========================================
  // CODE FORMATTING & LINTING
  // ==========================================

  "prettier.requireConfig": false,
  "prettier.useEditorConfig": false,
  "prettier.singleQuote": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // C/C++ Clang-Format Configuration
  "clang-format.style": "Google",
  "clang-format.fallbackStyle": "Google",

  // ==========================================
  // LANGUAGE-SPECIFIC SETTINGS
  // ==========================================

  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.tabSize": 4
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "python.createEnvironment.trigger": "off",
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": ["-v", "-s", "./tests", "-p", "test_*.py"],
  "python.analysis.autoFormatStrings": true,

  // ==========================================
  // DEBUGGING & DEVELOPMENT
  // ==========================================

  "debug.terminal.clearBeforeReusing": true,
  "code-runner.enableAppInsights": false,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // ==========================================
  // EXTENSIONS & THEMES
  // ==========================================

  "extensions.ignoreRecommendations": true,
  "vsicons.presets.hideExplorerArrows": true,
  "vsicons.dontShowNewVersionMessage": true,

  // ==========================================
  // FONTS & DISPLAY
  // ==========================================

  "notebook.output.fontFamily": "JetBrains Mono",
  "markdown.preview.fontFamily": "JetBrains Mono",

  // ==========================================
  // JAVASCRIPT & TYPESCRIPT
  // ==========================================

  "javascript.updateImportsOnFileMove.enabled": "always",

  // ==========================================
  // SECURITY & PRIVACY
  // ==========================================

  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "cmake.showNotAllDocumentsSavedQuestion": false,
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "terminal.integrated.defaultProfile.linux": "zsh"
}
