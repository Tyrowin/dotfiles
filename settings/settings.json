{
  // Core Editor Settings
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontSize": 16,
  "editor.fontWeight": "300",
  "editor.lineHeight": 1.6,
  "editor.tabSize": 4,
  "editor.fontLigatures": true,
  "editor.fontVariations": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Editor Behavior
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,

  // Editor Visual Settings
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.guides.bracketPairs": true,
  "editor.codeLensFontFamily": "JetBrains Mono",
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // Workbench Settings
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Panda Syntax",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "top",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.indent": 20,
  "workbench.editor.enablePreview": false,

  // Git Integration
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,

  // File Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,

  // Terminal Configuration
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "475",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Language-Specific Settings
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Material Icon Theme Settings
  "material-icon-theme.folders.color": "#90a4ae",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.saturation": 0.85,
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.opacity": 1,

  // VS Icons Settings
  "vsicons.presets.hideExplorerArrows": true,
  "vsicons.dontShowNewVersionMessage": true,

  // GitHub Copilot
  "github.copilot.chat.temporalContext.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },

  // Code Formatting & Linting
  "prettier.requireConfig": false,
  "prettier.useEditorConfig": false,
  "prettier.singleQuote": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Python & Testing
  "python.createEnvironment.trigger": "off",
  "isort.check": true,
  "python.testing.unittestEnabled": true,
  "python.testing.pytestEnabled": true,

  // Debug & Development
  "debug.terminal.clearBeforeReusing": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // UI & Display Settings
  "chat.editor.fontFamily": "JetBrains Mono",
  "notebook.output.fontFamily": "JetBrains Mono",
  "markdown.preview.fontFamily": "JetBrains Mono",

  // Security & Trust
  "security.workspace.trust.untrustedFiles": "open",
  "security.allowedUNCHosts": ["wsl.localhost"],

  // Miscellaneous
  "files.autoSave": "afterDelay",
  "window.titleBarStyle": "custom",
  "redhat.telemetry.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "settingsSync.ignoredSettings": ["-pylint.lintOnChange"],
  "extensions.ignoreRecommendations": true,
  "code-runner.enableAppInsights": false,
  "code-runner.runInTerminal": true
}
